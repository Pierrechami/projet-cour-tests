{% extends 'base.html.twig' %}

{% block title %}Validation de commande{% endblock %}

{% block body %}
    <h1>Validation de votre commande</h1>

    <table>
        <thead>
        <tr>
            <th>Produit</th>
            <th>Quantité</th>
            <th>Prix unitaire</th>
            <th>Total</th>
        </tr>
        </thead>
        <tbody>
        {% for item in cartItems %}
            <tr>
                <td>{{ item.product.name }}</td>
                <td>{{ item.quantity }}</td>
                <td>{{ item.product.price }} €</td>
                <td>{{ item.total | number_format(2, ',', '.') }} €</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <h3>Sous-total : {{ subTotal | number_format(2, ',', '.') }} €</h3>

    <a href="{{ path('cart_index') }}" class="btn btn-secondary">Retour au panier</a>
    {# <a href="{{ path('checkout_step2') }}" class="btn btn-primary">Valider et continuer</a> #}
{% endblock %}
